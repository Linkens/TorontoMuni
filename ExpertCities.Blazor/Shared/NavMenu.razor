@inject IStringLocalizer<NavMenu> Loc
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ExpertCities</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> @Loc["Home"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Asset_Management">
                <span class="oi oi-bar-chart" aria-hidden="true"></span> @Loc["Asset Management"]
            </NavLink>
        </div>
        @if (AssetExpanded)
        {
            <div class="nav-item pr-3 pl-5">
                <NavLink class="nav-link" href="Assets/Buildings">
                    <span class="oi oi-map" aria-hidden="true"></span> @Loc["Buildings"]
                </NavLink>
            </div>
            <div class="nav-item pr-3 pl-5 collapse">
                <NavLink class="nav-link" href="Assets/Roads">
                    <span class="oi oi-signpost" aria-hidden="true"></span> @Loc["Roads"]
                </NavLink>
            </div>
            <div class="nav-item pr-3 pl-5 collapse">
                <NavLink class="nav-link" href="Assets/Equipment">
                    <span class="oi oi-paperclip" aria-hidden="true"></span> @Loc["Equipment"]
                </NavLink>
            </div>
                  <div class="nav-item pr-3 pl-5 collapse">
                    <NavLink class="nav-link" href="Assets/Works">
                    <span class="oi oi-wrench" aria-hidden="true"></span> @Loc["Works"]
                    </NavLink>
                </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="HR">
                <span class="oi oi-people" aria-hidden="true"></span> @Loc["Human Resources"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Account_Finance">
                <span class="oi oi-credit-card" aria-hidden="true"></span> @Loc["Account & Finance"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Common">
                <span class="oi oi-file" aria-hidden="true"></span> @Loc["Common"]
            </NavLink>
        </div>
    </nav>
</div>

@code {
    protected bool AssetExpanded = false;
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        var b = Nav.Uri.Contains("/Assets/") || Nav.Uri.Contains("/Asset_Management");
        if (b != AssetExpanded) AssetExpanded =b; StateHasChanged();
        return base.OnAfterRenderAsync(firstRender);
    }
    protected override Task OnInitializedAsync()
    {
       
        return base.OnInitializedAsync();
    }
}
