@using OxyPlot
@using OxyPlot.Blazor
<BlazorPlotView Controller="PlotController" Model="_model"></BlazorPlotView>
@code {
    protected PlotModel _model;
    protected PlotController PlotController;
    [Parameter] public Asset Building { get; set; }
    protected override async Task OnInitializedAsync()
    {
        if(Building.Works.Any())
        {
            _model = BuildingPlots.GetChartWork(Building);
        }
        PlotController = new PlotController();
        PlotController.UnbindAll();
        await base.OnInitializedAsync();
    }
}
